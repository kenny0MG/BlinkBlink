<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNumberNamePochtareg1"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"


        android:outlineProvider="none"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:fontFamily="@font/roboto_light"
        android:text="BlinkBlink"
        android:textColor="?attr/colorPrimary"
        android:textSize="34dp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="345dp"
        android:layout_height="121dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:padding="2dp"
        android:text="Создавайте, комментируйте, делитесь своими идеями , сохраняйте анонимность  "
        android:textColor="?attr/colorPrimary"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNumberNamePochtaauth2"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:background="@drawable/normalbutton"
        android:fontFamily="@font/roboto"
        android:outlineProvider="none"

        android:textAllCaps="false"

        android:text="Продолжить через Google"
        android:textColor="?attr/colorPrimary"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumberNamePochtareg1"
        app:layout_constraintVertical_bias="0.057" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vxod"

        android:layout_width="311dp"
        android:layout_height="52dp"
        android:background="@drawable/normalbutton"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:outlineProvider="none"
        android:text="Войти"
        android:textColor="?attr/colorPrimary"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumberNamePochtaauth2"
        app:layout_constraintVertical_bias="0.065" />


</androidx.constraintlayout.widget.ConstraintLayout>