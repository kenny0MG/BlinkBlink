<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    tools:context=".BottomMoreFragment"
    android:orientation="vertical"
    android:background="@drawable/roudsheets">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <View
        android:id="@+id/view6"
        android:layout_width="33dp"
        android:layout_height="4dp"
        android:background="@drawable/new_line"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_complaint"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@drawable/defoult_round_button"
        android:text="Пожаловаться"
        android:textAllCaps="false"
        android:elevation="1dp"
        android:textColor="@color/redSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.134" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_black_list"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:background="@drawable/defoult_round_button"
        android:elevation="1dp"
        android:visibility="gone"
        android:text="Заблокривать пользователя"
        android:textAllCaps="false"
        android:textColor="@color/redSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.554" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_delete_post"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@drawable/defoult_round_button"
        android:elevation="1dp"
        android:text="Удалить пост"
        android:textAllCaps="false"
        android:textColor="@color/redSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.136" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add_to_archive"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@drawable/defoult_round_button"
        android:elevation="1dp"
        android:text="Добавить в архив"
        android:textAllCaps="false"
        android:textColor="@color/redSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.554" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_delete_comments"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:background="@drawable/defoult_round_button"
        android:elevation="1dp"
        android:visibility="gone"
        android:text="Отключить комментарии"
        android:textAllCaps="false"
        android:textColor="@color/redSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.958" />

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>