<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <TextView
        android:id="@+id/main_username"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:fontFamily="@font/roboto"
        android:text="Name item"
        android:textColor="?attr/colorPrimary"
        android:textSize="16.5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/circle_new_message"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toEndOf="@+id/main_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431" />

    <TextView
        android:id="@+id/group_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"

        android:text="group"
        android:textColor="@color/blacko"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_username"
        app:layout_constraintEnd_toStartOf="@+id/time_main"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_username"
        app:layout_constraintTop_toTopOf="@+id/main_username" />

    <TextView
        android:id="@+id/main_lastmsg"
        android:layout_width="244dp"
        android:layout_height="22dp"
        android:layout_marginEnd="84dp"
        android:text="last message"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/circle_new_message"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <TextView
        android:id="@+id/time_main"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:fontFamily="@font/roboto"
        android:text="22:10"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="@+id/main_lastmsg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_photo"
        android:layout_width="59dp"
        android:layout_height="52dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />


