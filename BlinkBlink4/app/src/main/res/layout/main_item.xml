    <!--        app:layout_constraintHorizontal_bias="0.919"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/online"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/main_lastmsg"
        app:layout_constraintEnd_toStartOf="@+id/time_main"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_username"
        app:layout_constraintTop_toTopOf="@+id/main_username"
        app:srcCompat="@drawable/ic_circle_foreground" />

    <ImageView
        android:id="@+id/circle_new_message"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        app:srcCompat="@drawable/ic_circle2_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>