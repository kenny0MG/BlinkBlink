<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">


    <ImageView
        android:id="@+id/proverkacom"
        android:layout_width="25dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commetusername"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/ic_proverka_foreground" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarcom"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@color/blacko"
        android:paddingLeft="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/commetusername"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commenttext"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="hi"
        android:textColor="?attr/colorPrimary"
        android:textSize="14.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timestemp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/avatarcom"
        app:layout_constraintTop_toBottomOf="@+id/commetusername"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commetusername"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:fontFamily="@font/roboto"
        android:gravity=""
        android:text="hello"
        android:textSize="12dp"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timestemp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/commenttext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <TextView
        android:id="@+id/timestemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476" />


</androidx.constraintlayout.widget.ConstraintLayout>